#: modules/ROOT/pages/introduction.adoc:13
msgid ""
"xref:{lang}/tech-sovereignty:ROOT:introduction.adoc[Guide to Technological "
"Sovereignty]"
msgstr ""
"xref:{lang}/tech-sovereignty:ROOT:introduction.adoc[Guia sobre sobirania "
"tecnològica]"

#. type: Plain text
#: modules/ROOT/pages/introduction.adoc:14
msgid ""
"xref:{lang}/ict-procurement:ROOT:context.adoc[Guide to Public ICT "
"Procurement]"
msgstr ""
"xref:{lang}/ict-procurement:ROOT:context.adoc[Guia de compra pública de TIC]"

